<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css"
      rel="stylesheet"
    />
    <script src="https://cdn.tailwindcss.com"></script>
    <title>Document</title>
  </head>
  <body class="bg-gray-100">
    <%- include('./partials/header') %> <% if (success.length > 0) { %>
    <div
      id="flash-message"
      class="fixed left-1/2 transform -translate-x-1/2 p-3 rounded-md bg-blue-500"
    >
      <span class="inline-block text-white"> <%= success %> </span>
    </div>
    <script>
      setTimeout(function () {
        const flashMessage = document.getElementById("flash-message");
        if (flashMessage) flashMessage.style.display = "none";
      }, 2000);
    </script>
    <% } %>
    <div class="w-full h-screen flex items-start px-10 py-10">
      <div
        class="w-full sm:w-1/2 md:w-1/3 lg:w-1/4 h-screen flex flex-col items-start bg-white p-5 rounded-lg shadow-md"
      >
        <div class="flex items-center gap-2 mb-5">
          <h3 class="font-semibold text-lg">Sort by</h3>
          <form action="/shop">
            <select
              class="border-gray-300 px-2 py-1 rounded"
              name="sortby"
              id=""
            >
              <option value="popular">Popular</option>
              <option value="newest">Newest</option>
            </select>
          </form>
        </div>
        <div class="flex flex-col mt-5 space-y-2">
          <a class="text-blue-500 hover:underline" href="">New Collection</a>
          <a class="text-blue-500 hover:underline" href="">All Products</a>
          <a class="text-blue-500 hover:underline" href=""
            >Discounted Products</a
          >
        </div>
        <div class="flex items-center gap-2 mb-5 mt-5">
          <h3 class="font-semibold text-lg">Filter by</h3>
          <form action="/shop">
            <select
              class="border-gray-300 px-2 py-1 rounded"
              name="sortby"
              id=""
            >
              <option value="popular">Discount</option>
              <option value="newest">Availability</option>
            </select>
          </form>
        </div>
      </div>
      <div class="w-full md:w-[75%] flex flex-col gap-5 h-screen overflow-auto">
        <div class="flex flex-wrap items-start gap-5">
          <% products.forEach(function(product){ %>
        <div class="w-full sm:w-1/2 md:w-1/3 lg:w-1/4 xl:w-1/5 m-3 mt-5 flex flex-col rounded-lg overflow-hidden shadow-lg">
    <div class="flex items-center justify-center bg-[<%= product.bgcolor %>]">
        <img class="h-52 w-full object-cover" src="data:image/jpeg;base64,<%= product.image.toString('base64') %>" alt="<%= product.name %>">
    </div>
    <div class="px-6 py-4 bg-[<%= product.panelcolor %>] text-[<%= product.textcolor %>]">
        <div class="font-bold text-xl mb-2"><%= product.name %></div>
        <p class="text-base">
            Price: Rs <%= product.price %><br>
            Discount: Rs <%= product.discount %>
        </p>
    </div>
    <div class="px-6 pt-4 pb-2 bg-[<%= product.panelcolor %>]">
        <a href="/addtocart/<%= product._id %>" class="inline-block bg-blue-600 rounded-full px-3 py-1 text-sm font-semibold text-black mr-2 mb-2 ">Add to Cart</a>
    </div>
</div>
          <% }) %>
        </div>
      </div>
    </div>
  </body>
</html>

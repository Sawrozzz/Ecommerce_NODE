<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
      <script src="https://cdn.tailwindcss.com"></script>

</head>
<body>
    <%- include('./partials/header') %>
         <% if (error && error.length > 0) { %>
  <div id="flash-message" class="fixed left-1/2 transform-translate-x-1/2 p-3 rounded-md bg-blue-500">
    <span class="inline-block text-white font-sans"> <%= error %> </span>
  </div>
  <script>
    setTimeout(function () {
      const flashMessage = document.getElementById("flash-message");
      if (flashMessage) flashMessage.style.display = "none";
    }, 2000);
  </script>
  <% } %>
   <%user.cart.forEach(function(item){ %>
     <div class="font-sans w-full h-screen flex items-start px-20 py-20 gap-10">
        <div class="w-[30%] rounded-md overflow-hidden">
            <div class=" h-80 flex justify-center items-center bg-[<%item.bgcolor %>] ">
                <img class="h-[15rem] w-[20rem]  object-contain " src="data:image/jpeg;base64, <%=item.image.toString('base64') %>" alt="">
            </div>
            <div class="w-full flex justify-between px-5 py-4 bg-[<%=item.panelcolor%>]">
                <h3 class="text-2xl"><%=item.name%></h3>
                <div class="flex items-center gap-2">
                    <i class="w-7 h-7 bg-white flex rounded-full items-center justify-center font-bold">+</i>
                    <div class="px-2 py-1 rounded-md bg-white text-black">01</div>
                    <i class="w-7 h-7 bg-white flex rounded-full items-center justify-center  font-bold ">-</i>
                </div>
            </div>
            <div class="flex items-center justify-between px-5 py-3 bg-[<%=item.textcolor%>]">
                <h4 class="text-lg">Net Total</h4>
                <h2 class="text-lg">Rs<%=bill%></h2>
            </div>
        </div>
        <div class="w-[70%]">
            <h3 class="text-xl">Price Breakdown</h3>
            <div class="px-10 mt-5">
                <div class="flex mt-2">
                    <h4 class="w-1/3">Total MRP</h4>
                    <h4>RS <%=item.price%></h4>
                </div>
                <div class="flex mt-2">
                    <h4 class="w-1/3">Discount on MRP</h4>
                    <h4>Rs<%=Number(item.discount)%></h4>
                </div>
                <div class="flex mt-2">
                    <h4 class="w-1/3">Platform Fee</h4>
                    <h4>Rs 20</h4>
                </div>
                <div class="flex mt-2">
                    <h4 class="w-1/3">Shipping Fee</h4>
                    <h4>FREE</h4>
                </div>
            </div>
            <div class="w-full h-[1px] bg-black mt-10"></div>
            <div class="flex mt-5">
                <h3 class="w-1/3 text-xl">Total Amount</h3>
                <h3 class="font-semibold text-xl text-green-700">Rs <%= bill %></h3>
            </div>
            <div class="mt-5 flex gap-5">
    <button class="w-1/4 bg-green-500 text-white py-2 rounded-md">Buy Now</button>
    <form method="post" action="/deletecart/<%= item._id %>" class="w-1/4">
        <button type="submit" class="w-full bg-red-500 text-white py-2 rounded-md cursor-pointer">Delete</button>
    </form>
</div>
            <form action=""></form>
        </div>
    </div>
    
  <% })%>
    <!-- <%- include('./partials/footer') %> -->
</body>
</html>
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Adhikari Pasal</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body class="bg-gray-100">
    <nav
      class="w-full fixed top-0 left-0 px-5 py-3 bg-white shadow-md flex items-center justify-between font-sans"
    >
      <h3 class="text-xl font-bold text-blue-500">
        <a href="/">Hamro Pasal</a>
      </h3>
      <% var loggedIn = typeof loggedIn !== "undefined" ? loggedIn : true %> <%
      if(loggedIn){ %>
      <div class="flex gap-5">
        <a href="/shop">Shop</a>
        <a href="/cart">Cart</a>
        <a href="/user/profile">My Account</a>
        <form action="/users/logout" method="post">
          <button type="submit" class="text-red-500 font-bold">Logout</button>
        </form>
      </div>
      <%} %>
    </nav>
  </body>
</html>
